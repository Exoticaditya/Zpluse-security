# ========================================
# SGMS FRONTEND ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control!

# ========================================
# BACKEND API CONFIGURATION (REQUIRED)
# ========================================
# Production: Railway backend URL
# Development: http://localhost:8080/api
VITE_API_BASE_URL=https://sgms-backend-production.up.railway.app/api

# ========================================
# FIREBASE CONFIGURATION (OPTIONAL)
# ========================================
# NOTE: Firebase is OPTIONAL for file storage only
# Authentication is handled by backend JWT
# Get these from Firebase Console → Project Settings → Web app

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ========================================
# FEATURE FLAGS (OPTIONAL)
# ========================================
VITE_USE_FIREBASE_STORAGE=false
VITE_ENABLE_ANALYTICS=false

# ========================================
# DEVELOPMENT / DEBUGGING (OPTIONAL)
# ========================================
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# ========================================
# IMPORTANT SECURITY NOTES
# ========================================
# 1. NEVER commit .env file to git (already in .gitignore)
# 2. Use different values for dev/staging/production
# 3. Rotate secrets regularly
# 4. Firebase keys are for STORAGE ONLY, not authentication
# 5. Backend JWT is the primary authentication mechanism
